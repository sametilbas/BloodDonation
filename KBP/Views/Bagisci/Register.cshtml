@model KBP.Models.UyeAccount
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="~/Css/register.css" rel="stylesheet" />
    <link href="~/Css/KanMerkezi.css" rel="stylesheet" />
</head>
<body>
    <!-- register kısmının büyütülmesi gerektiğinde .panel .register .inner satır 273 -->
    <div class="bg"></div>
    <div class="panel">
        <input type="radio" id="switch-open" name="switch" />
        <input type="radio" id="switch-close" name="switch" />
        <div class="section">

            <div class="curtain"></div>
            <canvas id="canvas"></canvas>

        </div>
        <div class="login">
            <h1>GİRİŞ</h1>
            @using (Html.BeginForm("Login", "Bagisci", FormMethod.Post))
            {
                <div class="group">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <input name="UserName" type="text" placeholder="Kullanıcı Adı" required="required" />
                    <label for="name"></label>
                </div>
                <div class="group">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <input name="Password" type="password" placeholder="Şifre" required="required" />
                    <label for="name"></label>
                </div>
                <br />
                <button type="submit" class="btn btn-danger btn-lg btn-block">GİRİŞ</button>

            }
        </div>

        <div class="register">
            <label class="button-open" for="switch-open"></label>
            <label class="button-close" for="switch-close"></label>
            <div class="inner">
                <h1>KAYIT OL</h1>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (ViewBag.Message != null)
                {
                    <div class="form-group">
                        <div class="col-md-10">@ViewBag.Message</div>
                    </div>
                }
                @using (Html.BeginForm("Register", "Bagisci", FormMethod.Post))
                {

                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="FirstName" type="text" placeholder="İsim" required="required" />
                        <label for="name"></label>
                    </div>



                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="LastName" type="text" placeholder="Soyisim" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Password" type="password" placeholder="Şifre" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="ConfirmPassword" type="password" placeholder="Şifre Tekrar" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="UserName" type="text" placeholder="Kullanıcı Adı" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Email" type="text" placeholder="Email" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Tel" type="text" placeholder="Tel" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Adres" type="text" placeholder="Adres" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Boy" type="text" placeholder="Boy" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Kilo" type="text" placeholder="Kilo" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Yas" type="text" placeholder="Yaş" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Aciklama" type="text" placeholder="Açıklama" required="required" />
                        <label for="name"></label>
                    </div>
                    <div class="group">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input class="text1" name="Kan_Grubu" type="text" placeholder="Kan Grubu" required="required" />
                        <label for="name"></label>
                    </div><br />
                    <button type="submit" class="btn btn-danger btn-lg btn-block">KAYIT</button>
                }

            </div>
        </div>
    </div>
    <script src="register.js"></script>
    <script src="//static.codepen.io/assets/common/stopExecutionOnTimeout-41c52890748cd7143004e05d3c5f786c66b19939c4500ce446314d1748483e13.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="~/Js/KanMerkezi.js"></script>
</body>
</html>



