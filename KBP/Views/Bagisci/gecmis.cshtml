@model IEnumerable<KBP.Models.Kan>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <style>

        .kan {
            font-size: 20px;
            font-weight: bold;
        }
    </style>
    <link rel="stylesheet" href="~/Css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Css/owl.carousel.css">
    <link rel="stylesheet" href="~/Css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Css/font-awesome.min.css">

    <link href="~/Css/slider.css" rel="stylesheet" />


    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Css/tooplate-style.css">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:400,600,700" rel="stylesheet" />
    <link href="~/Css/KanMerkezi.css" rel="stylesheet" />
</head>
<body>

    <div class="section">

        <div class="curtain"></div>
        <canvas id="canvas"></canvas>

    </div>
    <div id="nav-container" class="blood-text">
        BAĞIŞÇI<br><br>
        <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
            <div class="container">

                <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon icon-bar"></span>
                        <span class="icon icon-bar"></span>
                        <span class="icon icon-bar"></span>
                    </button>
                </div>
                <!-- MENU LINKS -->
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action("Index", "Bagisci")" class="smoothScroll">Anasayfa</a>
                        </li>


                        <li id="Cıkıs"><a href="@Url.Action("Index", "Home")" class="smoothScroll">Çıkış Yap</a></li>
                    </ul>

                </div>

            </div>
        </section>
    </div>
    <br />
    <br />

    <section id="header" data-stellar-background-ratio="0.5">
        <h4 style="font-size:large;font-weight:100;font-weight:bold;margin-left:500px; color:#369a54">BAĞIŞ GEÇMİŞİM</h4>
        <table class="table">
            <tr>

                <th style="font-size:large;color:brown;font-weight:100;font-weight:bold;">
                    @Html.DisplayNameFor(model => model.KanGrubu)
                </th>
                <th style="font-size:large;color:brown;font-weight:100;font-weight:bold;">
                    @Html.DisplayNameFor(model => model.Miktar)
                </th>
                <th style="font-size:large;color:brown;font-weight:100;font-weight:bold;">
                    @Html.DisplayNameFor(model => model.zaman)
                </th>
                <th style="font-size:large;color:brown;font-weight:100;font-weight:bold;">
                    @Html.DisplayNameFor(model => model.Yer)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr style="font-weight:bold; font-size:medium; ">

                    <td>
                        @Html.DisplayFor(modelItem => item.KanGrubu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Miktar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.zaman)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Yer)
                    </td>

                </tr>
            }

        </table>




    </section>

    <section id="about" data-stellar-background-ratio="0.5"></section>

    <section id="Contact" data-stellar-background-ratio="0.5"></section>


</body>
</html>




